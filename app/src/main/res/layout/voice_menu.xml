<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unsc_alt"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:id="@+id/barLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="70px"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <ImageView
                android:id="@+id/bars"
                android:layout_width="500px"
                android:layout_height="match_parent"
                android:adjustViewBounds="false"
                android:background="@drawable/health_bar"
                android:scaleType="fitXY"
                android:src="@drawable/energy_bar" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/iconLayout"
        android:layout_height="105px">

        <LinearLayout
            android:id="@+id/micLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/micButton"
                android:layout_width="108px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/voice_on"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/soundLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/soundButton"
                android:layout_width="108px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/audio_on"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/headLightsLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/headLightsButton"
                android:layout_width="108px"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/head_lights"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coolingLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coolingButton"
                android:layout_width="108px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/cooling_on"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lightsLayout"
            android:layout_width="128px"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lightsButton"
                android:layout_width="108px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10px"
                android:background="@drawable/lights_on"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="20px"
            android:layout_height="match_parent"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"

            android:id="@+id/tempIconLayout"
            android:weightSum="1"
            android:layout_width="100px">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/head_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/headIcon"
                    android:cropToPadding="false"
                    android:adjustViewBounds="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="66px">

                <ImageView
                    android:src="@drawable/torso_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/torsoIcon"
                    android:adjustViewBounds="false" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:addStatesFromChildren="false"
                android:layout_height="90px">

                <ImageView
                    android:src="@drawable/lower_state"
                    android:layout_width="match_parent"
                    android:id="@+id/lowerIcon"
                    android:cropToPadding="false"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="10px"
            android:layout_width="260px">

            <TextView
                android:id="@+id/temp1"
                android:layout_width="fill_parent"
                android:text="temp 1 n/a"
                android:textSize="20sp"
                android:layout_height="45px" />

            <TextView
                android:id="@+id/temp2"
                android:layout_width="fill_parent"
                android:text="temp 2 n/a"
                android:textSize="20sp"
                android:layout_height="45px" />

            <TextView
                android:id="@+id/temp3"
                android:layout_width="fill_parent"
                android:text="temp 3 n/a"
                android:textSize="20sp"
                android:layout_height="45px" />

            <TextView
                android:id="@+id/temp4"
                android:layout_width="fill_parent"
                android:text="temp 4 n/a"
                android:textSize="20sp"
                android:layout_height="45px" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingRight="10px"
            android:layout_width="260px">

            <TextView
                android:id="@+id/batt1"
                android:layout_width="fill_parent"
                android:text="batt 1 n/a"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_height="45px" />

            <TextView
                android:id="@+id/batt2"
                android:layout_width="fill_parent"
                android:text="batt 2 n/a"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_height="45px" />

            <TextView
                android:id="@+id/batt3"
                android:layout_width="fill_parent"
                android:text="batt 3 n/a"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_height="45px" />

            <TextView
                android:id="@+id/batt4"
                android:layout_width="fill_parent"
                android:text="batt 4 n/a"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_height="45px" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>